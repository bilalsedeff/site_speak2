# SiteSpeak Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===========================================
# REQUIRED - Application will not start without these
# ===========================================

# Database (PostgreSQL) - REQUIRED
DATABASE_URL=postgresql://username:password@localhost:5432/sitespeak_db

# Redis - REQUIRED
REDIS_URL=redis://localhost:6379

# Security - REQUIRED
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-chars-long
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-at-least-32-chars-long
ENCRYPTION_KEY=your-exactly-32-character-key-here

# OpenAI - REQUIRED for AI features
OPENAI_API_KEY=sk-your-openai-api-key-here

# ===========================================
# OPTIONAL - Third-party service integrations
# ===========================================

# Voice & Speech Services
ELEVENLABS_API_KEY=your-elevenlabs-api-key-for-voice-synthesis
DEEPGRAM_API_KEY=your-deepgram-api-key-for-speech-recognition

# Cloud Storage (AWS S3 or Cloudflare R2)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your-sitespeak-bucket

# CDN & Performance (Cloudflare)
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
CDN_ENABLED=true

# Email Services
SENDGRID_API_KEY=your-sendgrid-api-key
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key

# Analytics & Monitoring
PLAUSIBLE_API_HOST=https://plausible.io
PLAUSIBLE_DOMAIN=your-sitespeak-domain.com
PLAUSIBLE_ENABLED=true

POSTHOG_API_KEY=your-posthog-project-api-key
POSTHOG_HOST=https://app.posthog.com
POSTHOG_ENABLED=true

SENTRY_DSN=your-sentry-dsn-url
SENTRY_ENV=production

# Billing (Stripe)
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# AI & ML Services  
HUGGINGFACE_API_KEY=your-huggingface-api-key
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_PROJECT=sitespeak-production
LANGSMITH_ENABLED=true

# Cloudflare R2 Storage (alternative to AWS S3)
R2_ACCESS_KEY_ID=your-cloudflare-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-cloudflare-r2-secret-access-key
R2_ENDPOINT=your-r2-endpoint-url
R2_BUCKET_NAME=your-sitespeak-r2-bucket

# ===========================================
# ADVANCED CONFIGURATION & DEBUG
# ===========================================

# Voice Services Configuration
VOICE_WS_PORT=8080
VOICE_DEBUG=false
VOICE_PERFORMANCE_WARNINGS=false
AUDIO_WORKLET_DEBUG=false
ENABLE_VOICE=true

# AI & Search Configuration
SEARCH_STRATEGIES=vector,fulltext,hybrid
CONSENSUS_THRESHOLD=0.7

# Analytics & Monitoring Debug
ANALYTICS_DEBUG_MODE=false
LOG_LEVEL=info

# ===========================================
# FEATURE FLAGS
# ===========================================
NODE_ENV=production
INTENT_ENGINE_ENABLED=true
USE_PLAYWRIGHT_CRAWLER=true
AUTO_CRAWLER_ENABLED=true
ADVANCED_EXTRACTION=true
USE_LANGGRAPH_AGENT=true

# ===========================================
# URLS & NETWORKING
# ===========================================
PORT=5000
FRONTEND_URL=https://app.sitespeak.com
BACKEND_URL=https://api.sitespeak.com
CLIENT_URL=https://app.sitespeak.com
WIDGET_URL=https://widget.sitespeak.com