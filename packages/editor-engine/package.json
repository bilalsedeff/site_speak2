{
  "name": "@sitespeak/editor-engine",
  "version": "1.0.0",
  "description": "Drag-and-drop editor engine with component palette and contract preview",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./canvas": "./dist/canvas/index.js",
    "./palette": "./dist/palette/index.js",
    "./preview": "./dist/preview/index.js"
  },
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite build --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@sitespeak/design-system": "workspace:*",
    "@sitespeak/site-contract": "workspace:*",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "zustand": "^5.0.7",
    "immer": "^10.1.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "typescript": "^5.9.2",
    "vite": "^7.0.6",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}